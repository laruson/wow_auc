<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.gmail.chernikovich.wow_auctionator.presenter.screen.item.ItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.gmail.chernikovich.wow_auctionator.presenter.utils.customView.GoldView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:setGold="@{viewModel.minBuyoutServerGold}"
            app:setSilver="@{viewModel.minBuyoutServerSilver}"
            app:setCopper="@{viewModel.minBuyoutServerCopper}">
        </com.gmail.chernikovich.wow_auctionator.presenter.utils.customView.GoldView>

    </LinearLayout>
</layout>